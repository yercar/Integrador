<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="GradienteTituloTab" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFBFC4C5" Offset="0"/>
        <GradientStop Color="#FFE7F5F9" Offset="0.534"/>
    </LinearGradientBrush>

    <Style x:Key="TituloTabs" TargetType="{x:Type Label}">
        <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="#FF5495A8"/>
        <Setter Property="Background" Value="{StaticResource GradienteTituloTab}"/>
    </Style>
    
    <Style x:Key="EtiquetasMenuTiles" TargetType="c1:C1Tile">
        <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="#FFF3E6E6"/>
        <Setter Property="HeaderForeground" Value="#FFF3E6E6"/>
    </Style>
    
    <Style x:Key="ImagenLogoGcg" TargetType="Image">
        <Setter Property="Source" Value="pack://application:,,,/GRW.Integrador.Vista;component/Imagenes/logoGCG.gif"/>
        <Setter Property="Height" Value="59"/>
        <Setter Property="Width" Value="140"/>
